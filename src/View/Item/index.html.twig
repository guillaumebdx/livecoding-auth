{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Items</h1>
    <div id="alert-message" class="alert-success" role="alert">

    </div>
    <ul>
        {% for item in items %}
            <li>
                <a href="/item/show/{{ item.id }}">{{ item.id }}. {{ item.title }}</a>
                <i class="fas fa-star" data-itemid="{{ item.id }}" data-userid="{{ session.id }}"></i>
            </li>
        {% else %}
            <li>Nothing to display</li>
        {% endfor %}
    </ul>
    <a href="/item/add">Ajouter</a>
{% endblock %}
